{
    "name": "phpro/grumphp-combined-coverage-extension",
    "description": "Combine multiple PHP coverage into a single clover XML before executing a clover check.",
    "license": "MIT",
    "authors": [
        {
            "name": "Toon Verwerft",
            "email": "toon.verwerft@phpro.be"
        }
    ],
    "require": {
        "php": ">8.2",
        "phpro/grumphp": "^2.8",
        "symfony/process": "^7.0 || ^6.4"
    },
    "autoload": {
        "psr-4": {
            "Phpro\\GrumPHPCombinedCoverageExtension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpro\\GrumPHPCombinedCoverageExtensionTests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "require-dev": {
        "php-cs-fixer/shim": "^3.64",
        "phpunit/phpunit": "^11.3.5"
    }
}
